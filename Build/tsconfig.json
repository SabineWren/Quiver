{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"exactOptionalPropertyTypes": true,// Not needed, but consistent with codebases that use effect/schema
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"noEmit": true,
		"strict": true,
	},
	"exclude": ["node_modules/**/*"],
}
